<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorTertiary">@color/textColorPrimary</item>


    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="titleTextAppearance">@style/ToolbarTitleAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleAppearance</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">12sp</item>
    </style>

    <!--TEXT APPEARANCE-->
    <style name="StandardText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StandardText.Title" parent="StandardText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StandardText.Title.Bold.AllCaps" parent="StandardText.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StandardText.SubTitle" parent="StandardText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StandardText.Content" parent="StandardText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>